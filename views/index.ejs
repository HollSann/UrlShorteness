<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <title>Acortador URL</title>
</head>

<body>
    <div class="container">

        <h1>Acortador de URL</h1>
        <form action="/shortUrls" method="post" class="my-4 form-inline">
            <label for="fullUrl" class="sr-only"></label>
            <input type="url" name="fullUrl" required placeholder="Url" id="fullUrl" class="form-control col mr-2 mb-2">
            <button type="submit" class="btn btn-success">Achicar</button>
        </form>
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Url completo</th>
                    <th>Url acortado</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl=>{%>
                    <tr>
                        <td>
                            <a href=" <%shortUrl.full%>">
                                <%shortUrl.full%>
                            </a>
                        </td>
                        <td>
                            <a href="<%shortUrl.short%>">
                                <%shortUrl.short%>
                            </a>
                        </td>
                        <td>
                            <% shortUrl.clicks%>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
</body>

</html>